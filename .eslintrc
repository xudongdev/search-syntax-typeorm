{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint",
    "prettier/standard"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/sort": "error"
  }
}
